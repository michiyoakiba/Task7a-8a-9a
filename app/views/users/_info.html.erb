<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	 </tr> 
	 <tr>
    <th>follows</th>
    <td>
      <%= link_to user_followers_path(user) do %>
        <h6><%= user.followers.count %></h6>
      <% end %> 
    </td>
  </tr>
  <tr>  
    <th>followers</th>
    <td>  
      <%= link_to user_followings_path(user) do %>
        <h6><%= user.followings.count %></h6>
      <% end %>
    </td>
  </tr> 
</table>
<div class='row mb-4'>
  <% if user == current_user %>
    <% if current_user.following?(user) %>
    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
    <% else %>
    <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class:"btn-sm btn-success" %>
    <% end %>
  <% end %>
</div>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>